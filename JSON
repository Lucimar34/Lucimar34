function escreveHtml_NOVO(arrayPersonagens) {
    var elementoBase = document.getElementById('personagens');

    var novaLista = document.createElement("ul");
    for (let i = 0; i < arrayPersonagens1.length; i++) {
        let novoItem = document.createElement("li");
        novoItem.innerHTML = arrayPersonagens1[i].nome;
        novaLista.appendChild(novoItem);
    }
    elementoBase.appendChild(novaLista);

    let novoTitulo = document.createElement("h3");
    novoTitulo.innerHTML = "novo título com personagens";
    document.body.insertBefore(novoTitulo, elementoBase);
}

function escreveHtml(arrayPersonagens) {

    arrayPersonagens = arrayPersonagens.sort();
    var meuNovoConteudo = "<table border='1'>";
    for (let i = 0; i < arrayPersonagens.length; i++) {
        meuNovoConteudo += "<tr>";
        meuNovoConteudo += "<td>" + arrayPersonagens[i].id + "</td>";
        meuNovoConteudo += "<td>" + arrayPersonagens[i].nacao + "</td>";
        meuNovoConteudo += "<td>" + arrayPersonagens[i].casa + "</td>";
        meuNovoConteudo += "<td>" + arrayPersonagens[i].descricao + "</td>";
        meuNovoConteudo += "<td>" + arrayPersonagens[i].personagem - saga + "</td>";
        meuNovoConteudo += "<td>" + arrayPersonagens[i].imagem + "</td>";
        meuNovoConteudo += "</tr>";
    }
    meuNovoConteudo += "</table>";
    meuNovoConteudo += "<p>Quantidade: " + arrayPersonagens.length + "</p>";

    var elemento = document.getElementById('personagens');
    elemento.innerHTML = meuNovoConteudo;
}   